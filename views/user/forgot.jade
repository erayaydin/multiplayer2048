extends ../layout

block content
  .col-sm-8.col-sm-offset-2
    form(method='POST')
      legend Şifremi Unuttum
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group
        p Şifrenizi sıfırlamak için aşağıya e-posta adresinizi giriniz.
        label.control-label(for='email') E-Posta
        input.form-control(type='email', name='email', id='email', placeholder='E-Posta', autofocus, required)
      .form-group
        button.btn.btn-primary(type='submit')
          i.fa.fa-key
          | Şifremi Sıfırla
